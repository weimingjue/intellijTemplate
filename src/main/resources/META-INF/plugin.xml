<idea-plugin>
    <id>com.foundation.template</id>
    <name>MVVM</name>
    <vendor>mj</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.android.tools.idea.wizard.template">
        <applicationService
            serviceImplementation="com.foundation.template.services.MyApplicationService" />
        <projectService serviceImplementation="com.foundation.template.services.MyProjectService" />

        <wizardTemplateProvider
            implementation="com.foundation.template.temp.WizardTemplateProviderImpl" />
    </extensions>

    <applicationListeners>
        <listener class="com.foundation.template.listeners.MyProjectManagerListener"
            topic="com.intellij.openapi.project.ProjectManagerListener" />
    </applicationListeners>
</idea-plugin>
